<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.moralabs.pet.onboarding.presentation.ui.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login" >

        <action
            android:id="@+id/action_fragment_login_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment"
            app:enterAnim="@anim/slide_in"
            app:popEnterAnim="@anim/slide_out"/>

    </fragment>

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.moralabs.pet.onboarding.presentation.ui.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment"
        tools:layout="@layout/fragment_forgot_password"/>

    <fragment
        android:id="@+id/mainPageFragment"
        android:name="com.moralabs.pet.mainPage.presentation.ui.MainPageFragment"
        android:label="MainPageFragment"
        tools:layout="@layout/fragment_main_page"/>

</navigation>