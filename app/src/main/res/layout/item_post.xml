<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:pet="http://schemas.android.com/tools">

    <data>

        <variable
            name="location"
            type="com.moralabs.pet.core.data.remote.dto.LocationDto" />

        <variable
            name="content"
            type="com.moralabs.pet.core.data.remote.dto.ContentDto" />

        <variable
            name="user"
            type="com.moralabs.pet.profile.data.remote.dto.UserInfoDto" />

        <variable
            name="post"
            type="com.moralabs.pet.core.data.remote.dto.PostDto" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/userInfoLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/postText"
            app:layout_constraintStart_toStartOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userPhoto"
                android:layout_width="44dp"
                android:layout_height="44dp"
                pet:src="@{user.image}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                app:layout_constraintStart_toEndOf="@+id/userPhoto"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@{user.userName}"
                    android:textColor="@color/darkPrimary"
                    android:textSize="15dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@{location.latitude}"
                    android:textColor="@color/darkGray"
                    android:textSize="11dp"
                    android:fontFamily="@font/poppins_regular" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/postText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@{content.text}"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/darkPrimary"
            app:layout_constraintTop_toBottomOf="@+id/userInfoLinear"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/postImage"
            android:layout_width="wrap_content"
            android:layout_height="236dp"
            style="@style/PetImageView.Round.8"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_image"
            app:layout_constraintTop_toBottomOf="@+id/postText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/postLikeLinear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/postImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="12dp">

            <ImageView
                android:id="@+id/likeIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_like" />

            <TextView
                android:id="@+id/likeCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@{post.likeCount}"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginStart="2dp"
                android:textSize="11dp"
                android:gravity="center" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/postCommentLinear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="14dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/postImage"
            app:layout_constraintStart_toEndOf="@+id/postLikeLinear"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="12dp">

            <ImageView
                android:id="@+id/commentIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_comment" />

            <TextView
                android:id="@+id/commentCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@{post.commentCount}"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginStart="2dp"
                android:textSize="11dp"
                android:gravity="center" />

        </LinearLayout>

        <TextView
            android:id="@+id/postReleaseTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@{post.dateTime}"
            app:layout_constraintTop_toBottomOf="@+id/postImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>