<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pet="http://schemas.android.com/tools">

    <data>

        <import type="java.util.List"/>

        <variable
            name="user"
            type="com.moralabs.pet.profile.data.remote.dto.UserInfoDto" />

        <variable
            name="comment"
            type="com.moralabs.pet.core.data.remote.dto.CommentDto" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/userInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/otherUserPhoto"
                android:layout_width="44dp"
                android:layout_height="44dp"
                pet:src="@{user.image}" />

            <TextView
                android:id="@+id/otherUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dilsah.ozkan"
                android:textColor="@color/darkPrimary"
                android:textSize="@dimen/scale_13dp"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/otherUserPhoto"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/commentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{comment.text}"
            android:textSize="@dimen/scale_15dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/darkPrimary"
            app:layout_constraintTop_toBottomOf="@id/userInfo"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="So cute."/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>