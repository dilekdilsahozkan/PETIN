<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/scale_16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/userInfoLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userPhoto"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/user"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                app:layout_constraintStart_toEndOf="@+id/userPhoto"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="dilsah.ozkan"
                    android:textColor="@color/darkPrimary"
                    android:textSize="15dp"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Ankara"
                    android:textColor="@color/darkGray"
                    android:textSize="11dp"
                    android:fontFamily="@font/poppins_regular" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/postText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is my buddy. Love him."
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/darkPrimary"
            app:layout_constraintTop_toBottomOf="@+id/userInfoLinear"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/postImage"
            android:layout_width="wrap_content"
            android:layout_height="236dp"
            style="@style/PetImageView.Round.8"
            android:src="@drawable/pet"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_image"
            app:layout_constraintTop_toBottomOf="@+id/postText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/postLikeLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="12dp"
            app:layout_constraintTop_toBottomOf="@+id/postImage"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/likeIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_like" />

            <TextView
                android:id="@+id/likeCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="154"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginStart="2dp"
                android:textSize="11dp"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/postCommentLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:orientation="horizontal"
            android:layout_marginVertical="12dp"
            app:layout_constraintTop_toBottomOf="@+id/postImage"
            app:layout_constraintStart_toEndOf="@+id/postLikeLinear">

            <ImageView
                android:id="@+id/commentIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_comment" />

            <TextView
                android:id="@+id/commentCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="20"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginStart="2dp"
                android:textSize="11dp"
                android:gravity="center" />

        </LinearLayout>

        <TextView
            android:id="@+id/postReleaseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1h ago"
            android:layout_marginVertical="12dp"
            app:layout_constraintTop_toBottomOf="@+id/postImage"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/stick"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darkGray"
            android:alpha="0.5"
            android:layout_marginTop="@dimen/scale_20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/postLikeLinear" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_user_comment"
            app:layout_constraintTop_toBottomOf="@id/stick"
            app:layout_constraintStart_toStartOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/comment"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/scale_18dp"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_send"
            android:background="@drawable/background_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>