<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".settings.presentation.ui.account.ChangePasswordFragment">

        <LinearLayout
            android:id="@+id/infoContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCurrentPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="40dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/settings_current_password"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvNewPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/settings_new_password"
                app:layout_constraintTop_toBottomOf="@id/tvCurrentPassword"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvNewPasswordAgain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/settings_new_password_again"
                app:layout_constraintTop_toBottomOf="@id/tvNewPassword"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/editContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/infoContainer">



            <EditText
                android:id="@+id/editCurrentPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_edit"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="35dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvCurrentPassword"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="10dp"
                android:textSize="15dp"/>


            <EditText
                android:id="@+id/editNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_edit"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editCurrentPassword"
                app:layout_constraintStart_toEndOf="@+id/tvNewPassword"
                android:padding="10dp"
                android:textSize="15dp"/>


            <EditText
                android:id="@+id/editNewPasswordAgain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_edit"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editNewPassword"
                app:layout_constraintStart_toEndOf="@+id/tvNewPasswordAgain"
                android:padding="10dp"
                android:textSize="15dp"/>

        </LinearLayout>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/passwordInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_new_password_info"
            app:layout_constraintTop_toBottomOf="@+id/editContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp"
            android:textSize="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
