<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/commonToolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ellipse"
            android:layout_width="@dimen/scale_32dp"
            android:layout_height="@dimen/scale_32dp"
            android:layout_marginTop="@dimen/scale_16dp"
            android:layout_marginStart="@dimen/scale_16dp"
            android:background="@drawable/ic_ellipse"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="@dimen/scale_24dp"
            android:layout_height="@dimen/scale_24dp"
            android:layout_marginTop="@dimen/scale_16dp"
            android:layout_marginStart="@dimen/scale_16dp"
            android:src="@drawable/ic_back"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>