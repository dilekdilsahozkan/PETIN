<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/userInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/scale_16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/otherUserPhoto"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/otherUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="dilsah.ozkan"
                android:textColor="@color/darkPrimary"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@id/otherUserPhoto" />

        </LinearLayout>

        <EditText
            android:id="@+id/explanationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/explanation"
            android:layout_marginTop="@dimen/scale_20dp"
            android:fontFamily="@font/poppins_regular"
            android:background="@color/white"
            android:textSize="@dimen/scale_15dp"
            android:imeOptions="actionDone"
            android:layout_margin="@dimen/scale_16dp"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toBottomOf="@id/userInfo"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/petChooseLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scale_16dp"
            app:layout_constraintTop_toBottomOf="@id/explanationText"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/selectPet"
                android:layout_marginTop="64dp"
                android:textSize="@dimen/scale_15dp"
                android:textColor="@color/secondaryColor"
                android:fontFamily="@font/poppins_semibold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/petList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/scale_10dp"
                tools:listitem="@layout/item_pet_card"/>

        </LinearLayout>

        <include
            android:id="@+id/keyboard_toolbar"
            layout="@layout/item_keyboard_toolbar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>