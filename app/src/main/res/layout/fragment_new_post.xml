<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/ui_toolbar_new_post" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <LinearLayout
            android:id="@+id/userInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:layout_margin="@dimen/scale_16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/otherUserPhoto"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/user" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/otherUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="dilsah.ozkan"
                    android:textColor="@color/darkPrimary"
                    android:textSize="15dp"
                    app:layout_constraintStart_toEndOf="@id/otherUserPhoto" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/postIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:id="@+id/postText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/darkPrimary"
                        android:includeFontPadding="false"
                        android:textSize="11dp"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginStart="4dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/explanationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/explanation"
            android:fontFamily="@font/poppins_regular"
            android:background="@color/white"
            android:textSize="@dimen/scale_15dp"
            android:imeOptions="actionDone"
            android:layout_margin="@dimen/scale_16dp"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toBottomOf="@id/userInfo"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/postImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/explanationText"/>

        <LinearLayout
            android:id="@+id/petChooseLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scale_16dp"
            app:layout_constraintTop_toBottomOf="@id/explanationText"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/selectPet"
                android:layout_marginTop="64dp"
                android:textSize="@dimen/scale_15dp"
                android:textColor="@color/secondaryColor"
                android:fontFamily="@font/poppins_semibold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/petCardList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/scale_10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_pet_card"/>

        </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/keyboard_constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginStart="@dimen/scale_16dp"
            android:layout_marginEnd="@dimen/scale_16dp"
            app:layout_constraintBottom_toTopOf="@id/keyboard_toolbar"/>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/keyboard_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/galleryIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_gallery"
                android:layout_marginLeft="@dimen/scale_20dp"/>

            <ImageView
                android:id="@+id/locationIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location"
                android:layout_marginLeft="@dimen/scale_20dp"/>

            <ImageView
                android:id="@+id/petHouseIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pet_house"
                android:layout_marginLeft="@dimen/scale_20dp"/>

        </androidx.appcompat.widget.Toolbar>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>